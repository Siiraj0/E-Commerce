        <!-- JAVASCRIPT -->

        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script>
            let searchTimeout;
        
            async function searchOrders() {
                clearTimeout(searchTimeout);
                const searchTerm = document.getElementById('searchInput').value;
        
                searchTimeout = setTimeout(async () => {
                    try {
                        if (searchTerm.trim() === '') {
                            // When search input is empty, reload the full order list
                            window.location.href = window.location.pathname; // Redirect to current page to reset search
                            return;
                        }
        
                        console.log('Searching for:', searchTerm);
                        const response = await axios.get('/admin/searchOrders', {
                            params: { term: searchTerm }
                        });
        
                        const orders = response.data;
                        const tableBody = document.getElementById('orderTableBody');
                        tableBody.innerHTML = ''; // Clear previous results
        
                        if (orders.length > 0) {
                            orders.forEach((order, i) => {
                                const orderRow = document.createElement('tr');
                                orderRow.innerHTML = `
                                    <td>${i + 1}</td>
                                    <td>${order.userId.name}</td>
                                    <td>${order.products.length}</td>
                                    <td>${order.orderAmount}</td>
                                    <td>${new Date(order.orderDate).toDateString()}</td>
                                    <td>${order.payment}</td>
                                    <td>
                                        <button class="btn btn-primary btn-sm btn-rounded" style="color: white;">
                                            <a href="/admin/orderdetails/${order._id}" style="color: white;">View All</a>
                                        </button>
                                    </td>
                                `;
                                tableBody.appendChild(orderRow);
                            });
                        } else {
                            tableBody.innerHTML = '<tr><td colspan="7">No orders found</td></tr>';
                        }
                    } catch (error) {
                        console.error('Error fetching search results:', error);
                    }
                }, 300); // Delay search by 300ms to reduce server requests
            }
        
            document.getElementById('searchInput').addEventListener('input', searchOrders);
        </script>
        


