        <!-- Axios CDN -->
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        
        <script>

            async function addOffer() {

                const title = document.getElementById('titleId').value
                const percentage = document.getElementById('percentageId').value
                const startDate = document.getElementById('startDateId').value
                const endDate = document.getElementById('endDateId').value
                const category = document.getElementById('categorySelect').value
                const product = document.getElementById('productSelect').value

                document.getElementById('titleError').innerHTML='';
                document.getElementById('percentageError').innerHTML='';
                document.getElementById('startDateError').innerHTML='';
                document.getElementById('endDateError').innerHTML='';
                document.getElementById('catOrPro').innerHTML='';
                document.getElementById('emptyError').innerHTML = '';

                if (title === '' && percentage === '' && startDate === '' && endDate === '') {
                    document.getElementById('emptyError').innerHTML = 'Please fill the fields.';
                    return false;
                }

                if (title.charAt(0) === ' ') {
                    document.getElementById('titleError').innerHTML = 'Enter Offer title';
                    return false;
                } else if(/\d/.test(title)) {
                    document.getElementById('titleError').innerHTML = 'Offer title cannot be a number';
                    return false;
                }

                if (percentage === '') {
                    document.getElementById('percentageError').innerHTML = 'Please enter percentage';
                    return false;
                } else if(isNaN(percentage) || parseFloat(percentage) < 1){
                    document.getElementById('percentageError').innerHTML = 'Entere number greater than 1';
                    return false;
                } else if(percentage > 99){
                    document.getElementById('percentageError').innerHTML = 'Enter number below 99'
                    return false;
                }

                if (startDate === '') {
                    document.getElementById('startDateError').innerHTML = 'Please select Start Date';
                    return false;
                }

                if (endDate === '') {
                    document.getElementById('endDateError').innerHTML = 'Please select End Date';
                    return false;
                }

                let offerDetails = { title, percentage, startDate, endDate}

                if (document.getElementById('categoryRadio').checked) {
                    offerDetails.category = category;
                } else if (document.getElementById('productRadio').checked) {
                    offerDetails.productt = product;
                } else {
                    document.getElementById('catOrPro').innerHTML = 'Please select either a category or a product.';
                    return false;
                }

                document.getElementById('titleError').innerHTML='';
                document.getElementById('percentageError').innerHTML='';
                document.getElementById('startDateError').innerHTML='';
                document.getElementById('endDateError').innerHTML='';
                document.getElementById('catOrPro').innerHTML='';
                document.getElementById('emptyError').innerHTML = '';

                const response = await axios.post('/admin/addOffer',{offerDetails})

                if (response.data.loginRequired) {
                    window.location.href = '/admin/login';
                }else{
                    if(response.data.alreadyExist){
                        document.getElementById('titleError').innerHTML = 'Already exists';
                    }else if(response.data.success){
                        window.location.href = '/admin/offers'
                    }
                }

            }

            function toggleAccordion(accordionId) {
                // Hide both accordions initially
                document.getElementById('categoryAccordion').style.display = 'none';
                document.getElementById('productAccordion').style.display = 'none';

                // Show the selected accordion
                document.getElementById(accordionId).style.display = 'block';
            }

        </script>

