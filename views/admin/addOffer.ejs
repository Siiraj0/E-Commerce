<%- include('../layouts/admin/adminHeaders.ejs') %>
    <body data-layout="horizontal" data-topbar="dark">

        <!-- Begin page -->
        <div id="layout-wrapper">
        
            <!-- header -->
           
            <%- include('../layouts/admin/pageTopbar.ejs') %>

            <!-- ========== Left Sidebar Start ========== -->
            
            <%- include('../layouts/admin/verticalMenu.ejs') %>

            <!-- Left Sidebar End -->
           
            <%- include('../layouts/admin/leftsidebarEnd.ejs') %>
    


            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0">Add Offer</h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="/admin/products">Home</a></li>
                                            <li class="breadcrumb-item"><a href="/admin/offers">Offers</a></li>
                                            <li class="breadcrumb-item active">Add Offer</li>
                                        </ol>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

                        <div class="row">
                            <div class="col-lg-12">
                                <div id="addproduct-accordion" class="custom-accordion">
                                    <div class="card">
                                        <div id="addproduct-billinginfo-collapse" class="collapse show">
                                            <div class="p-4 border-top">
                                                    <div class="mb-3">
                                                        <label class="form-label" for="productname">Offer Title :</label>
                                                        <input type="text" class="form-control" placeholder="Enter name" id="titleId">
                                                        <p id="titleError" class="text-danger"></p>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-4">
                                                            <div class="mb-3">
                                                                <label class="form-label" for="price">Percentage:</label>
                                                                <input type="number" min="0" max="99" class="form-control" placeholder="Enter percentage" id="percentageId">
                                                                <p id="percentageError" class="text-danger"></p>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="mb-3">
                                                                <div>
                                                                    <label class="form-label">Start Date:</label>
                                                                </div>
                                                                <div>
                                                                    <input type="date" class="form-control" id="startDateId">
                                                                    <p id="startDateError" class="text-danger"></p>
                                                                </div>
                                                            </div>                                                              
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="mb-3">
                                                                <div>
                                                                    <label class="form-label">End Date:</label>
                                                                </div>
                                                                <div>
                                                                    <input type="date" class="form-control" id="endDateId">
                                                                    <p id="endDateError" class="text-danger"></p>
                                                                </div>
                                                            </div>                                                              
                                                        </div>
                                                    </div>
